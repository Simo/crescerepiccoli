<% unless (post_counter+1) % 2 == 0 %>
<div class="column dt-sc-one-half first">
<% else %>
<div class="column dt-sc-one-half">
<% end %>
  <article class="blog-entry">
    <div class="blog-entry-inner">
      <div class="entry-meta pink">
        <a href="blog-detail.html" class="blog-author pink"><img src="http://placehold.it/90x90" alt="" title=""></a>
        <div class="date pink">
          <span> <%= post.pubblicato.strftime("%d") %> </span>
          <p> <%= post.pubblicato.strftime("%b") %> <br> <%= post.pubblicato.strftime("%Y") %> </p>
        </div>
        <a href="#" class="comments pink">
          <%= post.pubblicato.strftime("%I") %> <%= post.pubblicato.strftime("%p") %> <span class="fa fa-clock-o"> </span>
        </a>
        <a href="#" class="entry_format pink"><span class="fa fa-picture-o"></span></a>
      </div>
      <div class="entry-thumb pink">
        <%= link_to post do %>
            <img src="http://placehold.it/1170x711" alt="" title="">
        <% end %>
      </div>
      <div class="entry-details pink">
        <div class="entry-title">
          <h3><%= link_to "#{post.titolo}", post, class: "pink-link" %> </h3>
        </div>
        <!--entry-metadata ends-->
        <div class="entry-body">
          <p><%= post.estratto %></p>
        </div>
        <%- unless post.corpo == ''  %>
            <a href="<%= "posts/#{post.id}" %>" class="dt-sc-button small pink"> Leggi tutto <span class="fa fa-chevron-circle-right"> </span></a>
        <%- end %>
      </div>
    </div>
  </article>
<% unless post_counter % 2 == 0 %>
    </div>
<% else %>
    </div>
<% end %>