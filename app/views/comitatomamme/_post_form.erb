<%= fields_for(post) do |f| %>
    <% if post.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

          <ul>
            <% post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :autore %><br>
      <%= f.text_field :autore %>
    </div>
    <div class="field">
      <%= f.label :titolo %><br>
      <%= f.text_field :titolo %>
    </div>
    <div class="field">
      <%= f.label :estratto %><br>
      <%= f.text_field :estratto %>
    </div>
    <div class="field">
      <%= f.label :corpo %><br>
      <%= f.text_area :corpo %>
    </div>
    <div class="field">
      <%= f.label :esteso %><br>
      <%= f.text_area :esteso %>
    </div>
    <div class="field">
      <%= f.label :bozza %><br>
      <%= f.date_select :bozza %>
    </div>
    <div class="field">
      <%= f.label :pubblicato %><br>
      <%= f.date_select :pubblicato %>
    </div>
    <div class="field">
      <%= f.label :cancellato %><br>
      <%= f.date_select :cancellato %>
    </div>
    <div class="field">
      <%= f.label :categoria %><br>
      <%= f.text_field :categoria %>
    </div>
    <div class="field">
      <%= f.label :tipo %><br>
      <%= f.text_field :tipo %>
    </div>
    <div class="dt-sc-one-column">
      <article class="blog-entry">
        <div class="blog-entry-inner">
          <div class="entry-meta">
            <a href="blog-detail.html" class="blog-author"><img src="images/rounded-bg-img.jpg" alt="" title=""></a>
            <div class="date">
              <span> <%= select_day Date.today %> </span>
              <p> <%= select_month Date.today%> <br> <%= select_year Date.today%> </p>
            </div>
            <a href="#" class="comments">
              12 <span class="fa fa-comment"> </span>
            </a>
            <a href="#" class="entry_format"><span class="fa fa-picture-o"></span></a>
          </div>
          <div class="entry-thumb">
            <a href="blog-detail.html"><img src="images/blog_img1.jpg" alt="" title=""></a>
          </div>
          <div class="entry-details">
            <div class="entry-title">
              <h3> <%= text_field_tag :titolo, '',  placeholder: 'inserisci il titolo' %> </h3>
            </div>
            <!--entry-metadata ends-->
            <div class="entry-body">
              <p><%= text_area_tag :corpo, "", placeholder: 'inserisci qui il testo da visualizzare direttamente in pagina' %></p>
            </div>
            <div class="actions">
              <%= f.submit %>
            </div>
          </div>
        </div>
      </article>
    </div>

<% end %>