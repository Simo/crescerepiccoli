<p id="notice"><%= notice %></p>
<div id="main">
  <!--container starts-->
  <div class="container">
    <!--primary starts-->
    <section id="primary" class="content-full-width">
      <div class="dt-sc-one-column">
        <h1>Listing Events</h1>

        <table>
          <thead>
            <tr>
              <th>Titolo</th>
              <th>Descrizione</th>
              <th>Quando</th>
              <th>Ora</th>
              <th>Indirizzo</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @events.each do |event| %>
              <tr>
                <td><%= event.titolo %></td>
                <td><%= event.descrizione.html_safe %></td>
                <td><%= event.quando.strftime("%d/%m/%Y") %></td>
                <td><%= "#{event.ora.hour}:#{event.ora.min}" %></td>
                <td><%= event.address %> <a target="_blank" href="<%= "https://www.google.com/maps/place/#{event.latitude}+#{event.longitude}/@#{event.latitude},#{event.longitude},15z" %>"><i class="fa fa-map-marker" title="<%= "{ lat: #{event.latitude}, lon: #{event.longitude}}" %>"></i></a></td>
                <td><%= link_to 'Show', event %></td>
                <td><%= link_to 'Edit', edit_event_path(event) %></td>
                <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to 'Nuovo evento', new_event_path %>
      </div>
      <div class="dt-sc-hr"></div>
    </section>
  </div>
</div>
