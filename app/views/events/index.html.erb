<p id="notice"><%= notice %></p>
<div id="main">
  <!--container starts-->
  <div class="container">
    <!--primary starts-->
    <section id="primary" class="content-full-width">
      <div class="dt-sc-one-column">
        <h1>Listing Events</h1>

        <table>
          <thead>
            <tr>
              <th>Titolo</th>
              <th>Descrizione</th>
              <th>Quando</th>
              <th>Ora</th>
              <th>Indirizzo</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @events.each do |event| %>
              <tr>
                <td><%= event.titolo %></td>
                <td><%= event.descrizione %></td>
                <td><%=   Date.strptime((event.quando.to_f / 1000).to_s, '%s').strftime("%d/%m/%Y") %></td>
                <td><%= "#{event.ora.hour}:#{event.ora.min}" %></td>
                <td><%= event.address %> <i class="fa fa-map-marker" title="<%= "{ lat: #{event.latitude}, lon: #{event.longitude}}" %>"></i></td>
                <td><%= link_to 'Show', event %></td>
                <td><%= link_to 'Edit', edit_event_path(event) %></td>
                <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'New Event', new_event_path %>
      </div>
    </section>
  </div>
</div>
