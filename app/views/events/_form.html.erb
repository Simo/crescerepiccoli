<div class="dt-sc-one-column contact_form_outer" style="padding: 5px">
<%= form_for @event, html: {class: "contact-form"} do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :titolo %><br>
    <%= f.text_field :titolo %>
  </div>
  <div class="field">
    <%= f.label :descrizione %><br>
    <%= f.text_field :descrizione %>
  </div>
  <div class="field">
    <%= f.label :quando %><br>
    <%= f.date_select :quando %>
  </div>
  <div class="field">
    <%= f.label :ora %><br>
    <%= f.time_select :ora %>
  </div>
  <div class="field">
    <%= f.label :address, "Indirizzo completo" %><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.hidden_field :latitude %>
  </div>
  <div class="field">
    <%= f.hidden_field :longitude %>
  </div>
  <div class="dt-sc-hr-very-small"> </div>
  <div class="actions">
    <%= f.submit %>
    <%= link_to 'Back', events_path %>
  </div>
<% end %>
</div>