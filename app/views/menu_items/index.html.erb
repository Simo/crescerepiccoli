<p id="notice"><%= notice %></p>

<h1>Listing Menu Items</h1>

<table>
  <thead>
    <tr>
      <th>Label</th>
      <th>Reference</th>
      <th>Color</th>
      <th>Href</th>
      <th>Active</th>
      <th>Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menu_items.each do |menu_item| %>
      <tr>
        <td><%= menu_item.label %></td>
        <td><%= menu_item.reference %></td>
        <td><%= menu_item.color %></td>
        <td><%= menu_item.href %></td>
        <td><%= menu_item.active %></td>
        <td><%= menu_item.priority %></td>
        <td><%= link_to 'Show', menu_item %></td>
        <td><%= link_to 'Edit', edit_menu_item_path(menu_item) %></td>
        <td><%= link_to 'Destroy', menu_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

