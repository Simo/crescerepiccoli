<div class="column dt-sc-one-column column">
  <%= form_for(@project) do |f| %>
      <% if @project.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

            <ul>
              <% @project.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <div class="column dt-sc-one-column">
        <div class="actions">
          <%= submit_tag 'Salva progetto', id: 'creaNuovoProgetto'%>
          <%= link_to 'Indietro', projects_path, class: "dt-sc-button large" %>
        </div>
      </div>
      <div class="dt-sc-one-column">
        <div class="column dt-sc-one-third first">
          <div class="field">
            <%= f.label :title, 'Titolo progetto' %><br>
            <%= f.text_field :title %>
          </div>
        </div>
        <div class="column dt-sc-two-third">
          <div class="column dt-sc-one-third first">
            <div class="field">
              <%= f.label :started_at, 'Data d\'inizio' %><br>
              <%= f.date_select :started_at, order: [:day, :month, :year] %>
            </div>
          </div>
          <div class="column dt-sc-one-third">
            <div class="field">
              <%= f.label :finished_at, 'Data di fine' %><br>
              <%= f.date_select :finished_at, order: [:day, :month, :year] %>
            </div>
          </div>
        </div>
      </div>
      <div class="dt-sc-one-column">
        <div class="column dt-sc-one-third first">
          <div class="field">
            <%= f.label :author, 'Referente' %><br>
            <%= f.text_field :author %>
          </div>
        </div>
      </div>
      <div class="dt-sc-one-column">
        <div class="column dt-sc-three-fourth first">
          <div class="field">
            <%= f.label :description, 'Descrizione' %><br>
            <%= f.text_area :description %>
          </div>
        </div>
      </div>
      <div class="dt-sc-one-column">
        <div class="column dt-sc-three-fourth first">
          <div class="field">
            <%= f.label :notes, 'Note' %><br>
            <%= f.text_area :notes %>
          </div>
        </div>
      </div>


<div id="activities-container">
  <div class="column dt-sc-one-column">
        <div>
          <%= link_to_add_association 'Aggiungi attivita', f, :tasks, class: "dt-sc-button small" %>
          <%= f.fields_for :tasks do |builder| -%>
              <%= render 'task_fields', :f => builder %>
          <% end %>
        </div>
  </div>
</div>
<% end %>
</div>
<div class="dt-sc-hr"></div>
