<fieldset class="nested-fields">
  <div class="column dt-sc-one-half first">
    <div class="activity-thumb">
      <span class="count"></span>
    </div>
    <div class="field">
      <%= f.hidden_field :project_id %>
    </div>
    <div class="column dt-sc-one-column">
      <div class="field">
        <%= f.label :title, 'Titolo attività' %><br>
        <%= f.text_field :title %>
      </div>
    </div>
    <div class="column dt-sc-one-column progetti">
      <div class="field">
        <%= f.label :description, 'Descrizione attività' %><br>
        <%= f.text_area :description %>
      </div>
    </div>
    <div class="column dt-sc-one-column progetti">
      <div class="column dt-sc-one-half first">
        <div class="field">
          <%= f.label :started_at, 'Iniziata' %><br>
          <%= f.date_select :started_at, order: [:day, :month, :year]  %>
        </div>
      </div>
      <div class="column dt-sc-one-half">
        <div class="field">
          <%= f.label :finished_at, 'Conclusa' %><br>
          <%= f.date_select :finished_at, order: [:day, :month, :year]  %>
        </div>
      </div>
    </div>
    <div class="column dt-sc-one-column progetti">
      <div class="field">
        <%= f.label :notes, 'Note' %><br>
        <%= f.text_area :notes %>
      </div>
    </div>
  </div> <!-- chiude il one-half dedicato ai tasks -->
  <div class="column dt-sc-one-half">
    <div>
    <%= f.fields_for :pictures do |builder| %>
        <%= render 'picture_fields', :f => builder %>
    <% end %>
    <%= link_to_add_association 'Aggiungi immagine', f, :pictures, class: "dt-sc-button small" %>
    <%= link_to_remove_association "Rimuovi attivita", f, class: "dt-sc-button small burnt-orange" %>
    </div>
  </div>
</fieldset>
</div>