<% title "Progetti" %>
<div id="main">
  <!--fullwidth_banner starts-->
  <section class="fullwidth_banner">
    <div class="container">
      <h1>i nostri progetti didattici</h1>
    </div>
    <div>
      <% if user_signed_in? %>
          <%= link_to 'New Project', new_project_path %>
      <% end %>
    </div>
  </section>
  <!--fullwidth_banner ends-->
  <!--container starts-->
  <div class="container">
    <!--primary starts-->
    <section id="primary" class="content-full-width">
      <% @projects.each do |project| %>
          <div class="column dt-sc-one-half first">
            <div class="about-slider-wrapper">
              <ul class="about-slider">
                <% project.all_pictures.each do |picture| %>
                    <li> <%= image_tag picture.image.to_s %> </li>
                <% end %>
              </ul>
            </div>
          </div>

          <!--dt-sc-one-half starts-->
          <div class="column dt-sc-one-half">
            <h2><%= project.title %></h2>
            <p><%= project.description %></p>
            <ul>
              <% project.tasks.each do |task| %>
                  <li><%= task.title %></li>
              <% end %>
            </ul>
            <%= link_to project do %>
            <div class="dt-sc-button small read-more"> Vedi in dettaglio <span class="fa fa-chevron-circle-right"> </span></div>
            <% end %>
          </div>
          <!--dt-sc-one-half ends-->

          <div class="dt-sc-hr"></div>
      <% end %>
    </section>
    <!--primary ends-->
  </div>
  <!--container ends-->
</div>
<!--main ends-->

<p id="notice"><%= notice %></p>

<h1>Listing Projects</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Started at</th>
      <th>Finished at</th>
      <th>Author</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.description %></td>
        <td><%= project.started_at %></td>
        <td><%= project.finished_at %></td>
        <td><%= project.author %></td>
        <td><%= project.notes %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

